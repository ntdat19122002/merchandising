<odoo>
    <data>
        <record id="res_config_settings_view_product_variant_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.merchandising</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="product_variant" string="Merchandising Settings"
                         data-key="merchandising">
                        <h2>Product Variant Config</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="shopify_app">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Shopify App</span>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="md_api_key" string="Shopify API Key"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="md_api_key"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="md_api_secret_key" string="Shopify API Secret"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="md_api_secret_key"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="md_api_version" string="Shopify API version"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="md_api_version"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="md_webhook_base_url" string="Webhook Base URL"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="md_webhook_base_url"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="md_password_master" string="Master Password"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="md_password_master"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>